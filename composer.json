{
    "name": "heimseiten/contao-custom-contao-bundle",
    "description": "FÃ¼gt dem Contao Content-Slider einen Fade-Effekt hinzu und vieles weitere mehr.",
    "keywords": [
        "horizontaleSlideAnimation",
        "gallery",
        "galerie",
        "marquee",
        "content slider",
        "content fader",
        "fade",
        "fader",
        "scroll to error",
        "variable with header height",
        "body class with scroll direction",
        "keyboard control",
        "tastatur steuerung"
    ],
    "type": "contao-bundle",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Niels Hegmans",
            "email": "info@heimseiten.de",
            "homepage": "https://www.heimseiten.de/",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/heimseiten/contao-custom-contao-bundle/issues",
        "source": "https://github.com/heimseiten/contao-custom-contao-bundle"
    },
    "require": {
        "php": "^8.1",
        "contao/core-bundle": "^4.13 || ^5.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.12"
    },
    "autoload": {
        "psr-4": {
            "Heimseiten\\ContaoCustomContaoBundle\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": false,
            "contao/manager-plugin": false,
            "contao-community-alliance/composer-plugin": true
        }
    },
    "extra": {
        "contao-manager-plugin": "Heimseiten\\ContaoCustomContaoBundle\\ContaoManager\\Plugin"
    },
    "scripts": {
        "cs-fixer": "@php tools/ecs/vendor/bin/ecs check config/ contao/ src/ templates/ tests/ --config tools/ecs/config.php --fix --ansi",
        "unit-tests": "@php tools/phpunit/vendor/bin/phpunit -c tools/phpunit/phpunit.xml.dist"
    }
}
